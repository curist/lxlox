let lib = import "src/lib.lx"

fn pp(arr) {
  if type(arr) == "array" {
    print(lib.join(arr, ""))
  } else {
    print(arr)
  }
}

// TODO: use `xxd -r -p` in the future to pack bytecodes into bin file
if len(Lx.args) != 2 {
  pp(["Usage: lxlox <path>"])
  Lx.exit(64)
}

let source = Lx.readTextFile(Lx.args[1])
print(source)

